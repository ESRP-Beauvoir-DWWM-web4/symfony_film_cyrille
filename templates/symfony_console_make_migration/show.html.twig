{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.description }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.genre }}</td>
            </tr>
            <tr>
                <th>DateSortie</th>
                <td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_symfony_console_make_migration_index') }}">back to list</a>

    <a href="{{ path('app_symfony_console_make_migration_edit', {'id': film.id}) }}">edit</a>

    {{ include('symfony_console_make_migration/_delete_form.html.twig') }}
{% endblock %}
